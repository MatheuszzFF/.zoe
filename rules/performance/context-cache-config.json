{
  "_metadata": {
    "system_name": "Context Cache Manager",
    "version": "3.0",
    "description": "Sistema de cache de contexto por sess√£o",
    "created": "2025-06-13",
    "phase": "3_performance_optimization"
  },
  "caching_strategy": {
    "enabled": true,
    "session_based": true,
    "auto_invalidation": true,
    "compression": true,
    "encryption": false
  },
  "context_categories": {
    "user_context": {
      "cache_duration": "session",
      "priority": "highest",
      "auto_refresh": false,
      "includes": [
        "user-math-prefs",
        "workspace_settings",
        "language_preferences"
      ]
    },
    "project_context": {
      "cache_duration": "session",
      "priority": "high",
      "auto_refresh": true,
      "includes": [
        "active_project",
        "project_stack",
        "project_settings",
        "recent_files"
      ]
    },
    "system_context": {
      "cache_duration": "persistent",
      "priority": "medium",
      "auto_refresh": false,
      "includes": [
        "system_rules",
        "priority_map",
        "action_configs"
      ]
    },
    "session_context": {
      "cache_duration": "session",
      "priority": "medium",
      "auto_refresh": true,
      "includes": [
        "command_history",
        "current_tasks",
        "session_metrics"
      ]
    }
  },
  "performance_features": {
    "smart_preloading": {
      "enabled": true,
      "triggers": [
        "session_start",
        "project_switch",
        "command_execution"
      ],
      "prediction_algorithm": "usage_pattern"
    },
    "memory_optimization": {
      "enabled": true,
      "max_cache_size": "100MB",
      "cleanup_threshold": 0.85,
      "compression_ratio": 0.7
    },
    "background_sync": {
      "enabled": true,
      "sync_interval": 300,
      "conflict_resolution": "latest_wins",
      "batch_updates": true
    }
  },
  "cache_structure": {
    "session_cache": {
      "location": ".zoe/rules/cache/session/context/",
      "format": "json_compressed",
      "max_entries": 500,
      "ttl": 3600
    },
    "persistent_cache": {
      "location": ".zoe/rules/cache/persistent/context/",
      "format": "json_compressed",
      "max_entries": 1000,
      "ttl": 86400
    }
  },
  "optimization_metrics": {
    "before_context_cache": {
      "context_load_time": "500ms",
      "repeated_context_queries": "high",
      "memory_usage": "variable"
    },
    "after_context_cache": {
      "context_load_time": "50ms",
      "repeated_context_queries": "eliminated",
      "memory_usage": "optimized"
    },
    "performance_improvement": "90% faster context access"
  },
  "smart_invalidation": {
    "enabled": true,
    "triggers": {
      "project_change": ["project_context"],
      "rule_update": ["system_context"],
      "session_end": ["session_context"],
      "manual_refresh": ["all"]
    },
    "cascade_invalidation": true,
    "dependency_tracking": true
  }
} 